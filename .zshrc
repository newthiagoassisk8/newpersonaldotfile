# Define o arquivo TODO
TODO="$HOME/todo/todo.txt"

# Lista ou adiciona tarefas
tdl() {
    if [ $# -eq 0 ]; then
        # Lista as tarefas com índices
        nl -w3 -s" - " "$TODO" || echo "Nenhuma tarefa encontrada."
    else
        # Adiciona a tarefa ao arquivo
        echo "$*" >> "$TODO"
        echo "Tarefa adicionada."
    fi
}

# Remove a tarefa pelo índice
tdlr() {
    if [ -z "$1" ]; then
        echo "Erro: Nenhum índice especificado para remover."
    elif ! [[ "$1" =~ ^[0-9]+$ ]]; then
        echo "Erro: O índice deve ser um número inteiro."
    else
        # Verifica se o índice é válido
        total_tarefas=$(wc -l < "$TODO")
        if [ "$1" -gt "$total_tarefas" ] || [ "$1" -lt 1 ]; then
            echo "Erro: Índice inválido. Existem apenas $total_tarefas tarefas."
        else
            # Remove a tarefa pelo índice
            sed -i "${1}d" "$TODO"
            echo "Tarefa removida."
        fi
    fi
}



